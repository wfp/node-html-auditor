#!/usr/bin/env node

/**
 * @file html-audit
 * @author Lasha Badashvili (lashab@picktek.com)
 *
 * Running HTML auditor tools.
 */

'use strict';

/**
 * Module dependencies.
 */
const argv = require('yargs').argv;
const pjson = require('../package.json');
const colors = require('colors');

// Check for version.
if (argv.version) {
  process.stdout.write(`${pjson.version.green}
`);
  process.exit(0);
}

/*eslint-disable max-len*/
// Prepare help text.
const help = `html-audit usage:
        html-audit [command]
Commands
        fetch   Fetch XML sitemap and download HTML pages.
        a11y    Audit HTML pages for accessibility (WCAG2) compliance.
        html5   Audit HTML pages for HTML5 compliance.
        link    Audit HTML pages for issues with links.
Options
        --help     Display this help message.
        --version  Display version number.
`;
/*eslint-enable max-len*/

// Get command.
const command = argv._[0];
if (!command) {
  process.stdout.write(help.yellow);
  process.exit(0);
}

process.on('uncaughtException', (error) => {
  // Log errors.
  process.stdout.write(
  `html-audit ${command} reported an error: ${error.message}
`.red
  );
  process.stdout.write(
  `Invalid command. Use: html-audit --help for more information
`.yellow
  );
  process.exit(1);
});

process.umask(0);

// Run command.
require(`../modules/${command}`)(argv);
